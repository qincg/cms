<?xml version="1.0" encoding="UTF-8" ?>
<Configuration status="info">
    <!--参数-->
    <Properties>
        <Property name="fileName">logs/cms.log</Property>
        <Property name="filePattern">logs/%d{yyyy-MM-dd}-%i-cms.log.gz</Property>
    </Properties>
    <!--定义日志输出地-->
    <Appenders>
        <!--控制台输出-->
        <Console name="console" target="SYSTEM_OUT">
            <!--设置输出的格式-->
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} [%t] %l %-5p - %m%n"/>
        </Console>
        <!--超过一定大小后，自动建立压缩文件-->
        <RollingFIle name = "RollingFile" fileName="${fileName}" filePattern="${filePattern}">
            <!--设置输出格式-->
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} [%t] %l %-5p - %m%n"/>
            <!--设置大小-->
            <SizeBasedTriggeringPolicy size="1kb"/>
        </RollingFIle>
    </Appenders>
    <Loggers>
        <Root level="debug">
            <AppenderRef ref="console"/>
            <AppenderRef ref="RollingFile"/>
        </Root>
    </Loggers>
</Configuration>
